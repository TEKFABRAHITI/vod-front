{% extends 'base-backend.html.twig' %}

{% block title %}Video index{% endblock %}

{% block body %}
    <div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Video index</h1>
    <a href="{{ path('app_admin_video_new') }}" class="btn btn-success"><i class="aligne-middle" data-feather="plus"></i></a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Published At</th>
                <th>Video URL</th>
                <th>Preview Image</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.title }}</td>
                <td>{{ video.description|raw }}</td>
                <td>{{ video.duration }}</td>
                <td>{{ video.publishedAt ? video.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ video.videoUrl }}</td>
                <td>{{ video.previewImage }}</td>
                <td>{{ video.slug }}</td>
                
            <td class="text-end">
                <a href="{{ path('app_admin_video_show', {'id': video.id}) }}" class="btn btn-warning"><i class="aligne-middle" data-feather="eye"></i></a>
                <a href="{{ path('app_admin_video_edit', {'id': video.id}) }}" class="btn btn-success"><i class="aligne-middle" data-feather="edit-2"></i></a>
            </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
