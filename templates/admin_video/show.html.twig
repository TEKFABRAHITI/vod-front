{% extends 'base-backend.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table">
    <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description|raw }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ video.getPreviewImage() }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ video.slug }}</td>
            </tr>
            
            <tr>
                <td colspan="2" class="text-end">
                    <a href="{{ path('app_admin_video_show', {'id': video.id}) }}" class="btn btn-warning"><i class="aligne-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_video_edit', {'id': video.id}) }}" class="btn btn-success"><i class="aligne-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
    </tbody>
</table>


